@model IEnumerable<AOWebApp.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<form method="post">
    <div class="input-group">
        <span class="input-group-text">Customer Name</span>
        <input type="text" class="form-control" @* asp-for="SearchCustomerName" *@ title="Search by customer name" placeholder="Type Customer Name here..." />
    </div>

    <select class="form-select m-1" @* asp-for="Suburb" *@>
        <option selected value="">All Suburbs</option>
    </select>

    <div class="form-inline">
        <buttn class="btn btn-outline-success m-2" typeof="submit">Search Customer</buttn>
        <a asp-action="Index" class="btn btn btn-outline-danger">Reset</a>
    </div>

</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.AddressId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
